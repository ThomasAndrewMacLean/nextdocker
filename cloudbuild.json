{
  "steps": [
  {
    "name": "gcr.io/cloud-builders/docker",
    "args": [
      "build",
      "-t",
      "gcr.io/[PROJECT_ID]/[IMAGE]",
      "."
    ]
  },
  {
    "name": "gcr.io/cloud-builders/docker",
    "args": [
      "push",
      "gcr.io/[PROJECT_ID]/[IMAGE]"
    ]
  },
  {
    "name": "gcr.io/cloud-builders/gcloud",
    "args": [
      "beta",
      "run",
      "deploy",
      "[SERVICE_NAME]",
      "--image",
      "gcr.io/[PROJECT_ID]/[IMAGE]",
      "--region",
      "[REGION]",
      "--platform",
      "managed",
      "--allow-unauthenticated"
      ]
  }
  ],
  "images": [
    "gcr.io/[PROJECT_ID]/[IMAGE]"
  ]
}